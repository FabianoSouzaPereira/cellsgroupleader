<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/Configura_o_de_acesso">
        <EditTextPreference
            android:defaultValue="@string/Celular_lider_acesso"
            android:key="celula"
            android:selectAllOnFocus="true"
            android:title="@string/celula"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/userUid"
            android:key="userUid"
            android:selectAllOnFocus="true"
            android:title="@string/liderId"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/NumeroCelular"
            android:summary="@string/telefone"
            android:title="@string/Celular"
            app:key="celular"
            app:title="@string/Celular"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>